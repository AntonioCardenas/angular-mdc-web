{
  "name": "angular-mdc-web",
  "description": "Angular for Material Design Components (MDC-Web)",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.0.0",
  "scripts": {
    "build:demo": "webpack --config config/webpack/webpack.dev.js --progress",
    "build:umd": "webpack --config config/webpack/webpack.config.umd.js --progress",
    "build": "npm run build:umd && cpy src/lib/package.json dist && cpy README.md dist",
    "server": "webpack-dev-server --config config/webpack/webpack.dev.js --content-base src/demo-app --inline --port 4000",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/router": "^4.1.3",
    "core-js": "^2.4.1",
    "material-components-web": "0.12.1",
    "rxjs": "^5.4.0",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "@angular/flex-layout": "2.0.0-beta.8",
    "@types/node": "7.0.27",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^7.1.1",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-traverse": "^6.24.1",
    "babel-types": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "2.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "glob": "^7.1.2",
    "html-loader": "^0.4.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.5",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "typescript": "2.3.4",
    "typings": "2.1.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "presets": [
      [
        "es2015"
      ],
      {
        "plugins": [
          "transform-es2015-block-scoping"
        ]
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
