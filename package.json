{
  "name": "angular-mdc",
  "description": "Angular Material Design Components",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.0.0",
  "scripts": {
    "clean": "rimraf build dist",
    "ngc": "ngc -p src/lib/tsconfig.json",
    "rollup": "rollup -c config/rollup.config.js",
    "copy-readme": "cpy README.md dist",
    "copy-package-json": "cpy src/lib/package.json dist",
    "copy-types": "cpy **/*.d.ts ../dist --cwd=build --parents",
    "copy-metadata": "cpy build/material.metadata.json dist/",
    "ugilify:bundles": "uglifyjs --compress --mangle --output dist/bundles/material.umd.min.js -- dist/bundles/material.umd.js",
    "build": "npm run clean && npm run ngc && npm run rollup && npm run copy-types && npm run copy-metadata && npm run copy-readme && npm run copy-package-json && npm run ugilify:bundles",
    "build:demo": "webpack --config config/webpack/webpack.dev.js --progress && uglifyjs --compress --mangle --output publish/app.bundle.min.js -- publish/app.bundle.js && uglifyjs --compress --mangle --output publish/polyfills.bundle.min.js -- publish/polyfills.bundle.js && uglifyjs --compress --mangle --output publish/vendor.bundle.min.js -- publish/vendor.bundle.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commitmsg": "validate-commit-msg",
    "lint:ts": "tslint 'src/**/*.ts'",
    "lint:css": "stylelint src/**/*.scss --config .stylelint-config.yaml",
    "lint": "npm run lint:ts && npm run lint:css",
    "server": "webpack-dev-server --config config/webpack/webpack.dev.js --content-base src/demo-app --inline --port 4000",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.2.5",
    "@angular/compiler": "^4.2.5",
    "@angular/core": "^4.2.5",
    "@angular/forms": "^4.2.5",
    "@angular/http": "^4.2.5",
    "@angular/platform-browser": "^4.2.5",
    "@angular/platform-browser-dynamic": "^4.2.5",
    "@angular/router": "^4.2.5",
    "core-js": "^2.4.1",
    "material-components-web": "^0.14.0",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.12"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.2.5",
    "@angular/flex-layout": "2.0.0-beta.8",
    "@types/node": "8.0.1",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^7.1.1",
    "awesome-typescript-loader": "^3.2.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "1.6.0",
    "codecov": "^2.2.0",
    "copy-webpack-plugin": "^4.0.1",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "2.0.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "glob": "^7.1.2",
    "html-loader": "^0.4.5",
    "html-minifier": "^3.5.2",
    "husky": "^0.14.3",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-angular": "^0.4.4",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.5.0",
    "stylelint-scss": "^1.4.4",
    "stylelint-selector-bem-pattern": "^1.1.0",
    "tslint": "^5.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.1",
    "typings": "^2.1.1",
    "uglify-es": "^3.0.19",
    "validate-commit-msg": "^2.12.2",
    "vrsource-tslint-rules": "^5.1.0",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie 10"
            ]
          }
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "%s\nNOTE: Please see angular's commit message guidelines (https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit) for information on how to format commit messages.\n\nAs an example, here is a valid commit message: 'docs(slider): Document slider public api'\n\nIf this commit is on a development / WIP branch, you can disable this by running `git commit --no-verify`.",
      "scope": {
        "allowed": [
          "button",
          "card",
          "checkbox",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "form-field",
          "grid-list",
          "icon-toggle",
          "layout-grid",
          "linear-progress",
          "list",
          "menu",
          "radio",
          "ripple",
          "rtl",
          "select",
          "slider",
          "snackbar",
          "switch",
          "tabs",
          "textfield",
          "theme",
          "toolbar",
          "typography",
          "demo-app",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
