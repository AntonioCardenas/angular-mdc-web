{
  "name": "angular-mdc-web",
  "description": "Angular Framework for Material Design Components (MDC-Web)",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.1.0",
  "scripts": {
    "changelog": "standard-version",
    "build": "webpack --progress",
    "build:detailed": "webpack --progress --display-error-details",
    "watch": "npm run build -- --watch",
    "server": "webpack-dev-server --inline --port 4000 --content-base demo-app/src",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/router": "^4.1.2",
    "core-js": "^2.4.1",
    "material-components-web": "0.11.0",
    "rxjs": "^5.4.0",
    "zone.js": "0.8.10"
  },
  "devDependencies": {
    "@types/node": "7.0.18",
    "autoprefixer": "^7.1.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "1.4.0",
    "css-loader": "^0.28.1",
    "cz-conventional-changelog": "2.0.0",
    "html-loader": "^0.4.5",
    "node-sass": "^4.5.2",
    "postcss-loader": "^2.0.5",
    "style-loader": "0.17.0",
    "standard-version": "4.0.0",
    "sass-loader": "^6.0.5",
    "source-map-loader": "^0.2.1",
    "typescript": "2.3.2",
    "typings": "2.1.1",
    "webpack": "2.5.1",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie 10"
            ]
          }
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "config": {
    "validate-commit-msg": {
      "scope": {
        "allowed": [
          "animation",
          "button",
          "card",
          "checkbox",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "form-field",
          "grid-list",
          "icon-toggle",
          "layout-grid",
          "list",
          "menu",
          "radio",
          "ripple",
          "rtl",
          "select",
          "snackbar",
          "switch",
          "textfield",
          "theme",
          "toolbar",
          "typography",
          "demo",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
