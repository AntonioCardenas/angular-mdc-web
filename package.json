{
  "name": "angular-mdc-web",
  "description": "Angular for Material Design Components (MDC-Web)",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.0.0",
  "scripts": {
    "changelog": "standard-version lib/package.json",
    "build:demo": "webpack --config config/webpack/webpack.dev.js --progress",
    "build:dist": "npm run build:umd && cpy src/lib/package.json dist && cpy README.md dist",
    "build:umd": "webpack --config config/webpack/webpack.config.umd.js --progress",
    "deploy-gh-pages": "npm run build && ./scripts/deploy.sh --message \"Deploy gh-pages from commit $(git rev-parse HEAD)  [ci skip]\" -n",
    "server": "webpack-dev-server --config config/webpack/webpack.dev.js --content-base src/demo-app --inline --port 4000",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/router": "^4.1.3",
    "core-js": "^2.4.1",
    "material-components-web": "0.11.1",
    "rxjs": "^5.4.0",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "@types/node": "7.0.22",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^7.1.1",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "1.5.1",
    "copy-webpack-plugin": "4.0.1",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.28.3",
    "cz-conventional-changelog": "2.0.0",
    "html-loader": "^0.4.5",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.5",
    "source-map-loader": "^0.2.1",
    "standard-version": "4.0.0",
    "style-loader": "0.18.1",
    "typescript": "2.3.3",
    "typings": "2.1.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "presets": [
      [
        "env", {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie 10"
            ]
          }
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "config": {
    "validate-commit-msg": {
      "scope": {
        "allowed": [
          "animation",
          "button",
          "card",
          "checkbox",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "form-field",
          "grid-list",
          "icon-toggle",
          "layout-grid",
          "list",
          "menu",
          "radio",
          "ripple",
          "select",
          "snackbar",
          "switch",
          "tabs",
          "textfield",
          "theme",
          "toolbar",
          "typography",
          "demo",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
