{
  "name": "angular-mdc-web",
  "description": "Angular Framework for Material Design Components (MDC-Web)",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.0.1",
  "scripts": {
    "build": "webpack --progress",
    "build:detailed": "webpack --progress --display-error-details",
    "watch": "npm run build -- --watch",
    "server": "webpack-dev-server --inline --port 4000 --content-base demo-app/src",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^4.1.0",
    "@angular/compiler": "^4.1.0",
    "@angular/core": "^4.1.0",
    "@angular/forms": "^4.1.0",
    "@angular/http": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "@angular/platform-browser-dynamic": "^4.1.0",
    "@angular/router": "^4.1.0",
    "@material/textfield": "^0.2.6",
    "@material/button": "^0.3.3",
    "@material/ripple": "0.5.1",
    "@material/fab": "0.3.5",
    "@material/theme": "0.1.4",
    "core-js": "^2.4.1",
    "rxjs": "^5.3.0",
    "zone.js": "0.8.9"
  },
  "devDependencies": {
    "@types/node": "7.0.14",
    "autoprefixer": "^6.7.7",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "1.4.0",
    "css-loader": "^0.28.0",
    "cz-conventional-changelog": "2.0.0",
    "html-loader": "^0.4.5",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "style-loader": "0.16.1",
    "sass-loader": "^6.0.3",
    "source-map-loader": "^0.2.1",
    "typescript": "2.3.2",
    "typings": "2.1.1",
    "webpack": "2.4.1",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "presets": [
      [
        "env", {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie 10"
            ]
          }
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
