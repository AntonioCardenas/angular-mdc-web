{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "outDir": "./../../build",
    "declaration": true,
    "baseUrl": ".",
    "noUnusedParameters": false,
    "sourceMap": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "typeRoots": ["./../../node_modules/@types"],
    "noStrictGenericChecks": true
  },
  "files": [
    "public_api.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@angular-mdc/web"
  }
}
