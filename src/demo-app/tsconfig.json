{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "stripInternal": false,
    "sourceMap": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "files": [
    "./app-module.ts",
    "./main.ts"
  ],
  "exclude": [
    "main-aot.ts"
  ]
}
