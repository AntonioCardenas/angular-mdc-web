{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib":[
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../../node_modules/@types"],
    "rootDirs": [
      "./src",
      "./test"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular-mdc/web/*": ["../../src/lib/*"],
      "@angular-mdc/web": ["../../src/lib/public-api.ts"]
    }
  }
}
